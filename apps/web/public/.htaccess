<IfModule mod_rewrite.c>
  RewriteEngine On

  # No reescribir si es archivo o directorio real
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # ⚠️ No reescribir llamadas a WebSocket
  RewriteCond %{REQUEST_URI} ^/socket.io/ [NC]
  RewriteRule ^ - [L]

  # ⚠️ No reescribir llamadas a la API
  RewriteCond %{REQUEST_URI} ^/api/ [NC]
  RewriteRule ^ - [L]

  # Redirige todo lo demás a index.html (para React)
  RewriteRule ^ index.html [L]
</IfModule>

DirectoryIndex index.html
